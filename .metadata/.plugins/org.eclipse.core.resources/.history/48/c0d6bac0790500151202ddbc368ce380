	}//end onCreate()
	
	private Context getAppContext(){
		return this;
	}
	
	private static void dismissProgress(){
		progressLayout.setVisibility(RelativeLayout.GONE);
	}
	
	public static ArrayList<Place> getAllPlaces(){
		return allPlaces;
		
	}
}//end Activity
